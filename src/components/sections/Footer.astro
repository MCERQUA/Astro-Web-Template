---
// Footer.astro - Site footer component
export interface Props {
  companyName?: string;
  class?: string;
}

const { 
  companyName = 'Your Company',
  class: className = ''
} = Astro.props;

const currentYear = new Date().getFullYear();

// Footer navigation links
const footerLinks = {
  company: [
    { href: '/about', label: 'About Us' },
    { href: '/services', label: 'Services' },
    { href: '/contact', label: 'Contact' },
    { href: '/careers', label: 'Careers' }
  ],
  resources: [
    { href: '/blog', label: 'Blog' },
    { href: '/faq', label: 'FAQ' },
    { href: '/support', label: 'Support' },
    { href: '/documentation', label: 'Documentation' }
  ],
  legal: [
    { href: '/privacy', label: 'Privacy Policy' },
    { href: '/terms', label: 'Terms of Service' },
    { href: '/cookies', label: 'Cookie Policy' },
    { href: '/sitemap', label: 'Sitemap' }
  ]
};

// Social media links
const socialLinks = [
  {
    href: 'https://facebook.com',
    label: 'Facebook',
    icon: 'M18.77 7.46H15.5v-1.9c0-.9.6-1.1 1-1.1h2.27V2.36h-3.08C13.35 2.36 12 3.96 12 6.04v1.42H9.5v2.28H12v8.3h3.5v-8.3h2.77l.5-2.28z'
  },
  {
    href: 'https://twitter.com',
    label: 'Twitter',
    icon: 'M23.32 4.56c-.8.37-1.5.38-2.22.02.93-.56.98-.96 1.32-2.02-.87.52-1.84.9-2.87 1.11-.82-.88-2-1.43-3.3-1.43-2.5 0-4.52 2.04-4.52 4.53 0 .35.04.7.11 1.04-3.76-.19-7.1-2-9.33-4.74-.39.67-.61 1.45-.61 2.28 0 1.57.8 2.95 2.02 3.76-.74-.02-1.44-.23-2.05-.57v.06c0 2.2 1.56 4.03 3.64 4.44-.67.2-1.37.2-2.06.08.58 1.8 2.26 3.12 4.25 3.16C5.78 18.1 3.37 18.74 1 18.46c2 1.3 4.4 2.04 6.97 2.04 8.35 0 12.92-6.92 12.92-12.93 0-.2 0-.4-.01-.6.89-.63 1.66-1.43 2.27-2.34-.82.36-1.7.6-2.62.72z'
  },
  {
    href: 'https://linkedin.com',
    label: 'LinkedIn',
    icon: 'M6.5 21.5h-5v-13h5v13zM4 6.48C2.74 6.48 1.8 5.54 1.8 4.28S2.74 2.08 4 2.08s2.2.94 2.2 2.2S5.26 6.48 4 6.48zM23.5 21.5h-5v-8c0-1.4-.6-2.5-2.2-2.5-1.2 0-1.9.8-2.2 1.6-.1.3-.1.7-.1 1.1v7.8h-5s.1-13 0-13h5v2c.6-1 1.8-2.4 4.4-2.4 3.2 0 5.6 2.1 5.6 6.6v6.8z'
  }
];
---

<footer class={`bg-espresso text-soft-white ${className}`}>
  <div class="container-padding">
    <!-- Main Footer Content -->
    <div class="py-16">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <!-- Company Info -->
        <div class="lg:col-span-1">
          <div class="mb-6">
            <h3 class="text-2xl font-bold text-soft-white mb-4">{companyName}</h3>
            <p class="text-warm-gray mb-6">
              Creating exceptional digital experiences that drive results and inspire growth.
            </p>
          </div>
          
          <!-- Social Links -->
          <div class="flex space-x-4">
            {socialLinks.map((social) => (
              <a 
                href={social.href}
                aria-label={social.label}
                class="w-10 h-10 bg-soft-white/10 rounded-lg flex items-center justify-center hover:bg-terra-cotta transition-colors group"
                target="_blank"
                rel="noopener noreferrer"
              >
                <svg class="w-5 h-5 text-soft-white group-hover:text-soft-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d={social.icon}></path>
                </svg>
              </a>
            ))}
          </div>
        </div>
        
        <!-- Company Links -->
        <div>
          <h4 class="text-lg font-semibold text-soft-white mb-6">Company</h4>
          <ul class="space-y-3">
            {footerLinks.company.map((link) => (
              <li>
                <a 
                  href={link.href}
                  class="text-warm-gray hover:text-soft-white transition-colors"
                >
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
        
        <!-- Resources Links -->
        <div>
          <h4 class="text-lg font-semibold text-soft-white mb-6">Resources</h4>
          <ul class="space-y-3">
            {footerLinks.resources.map((link) => (
              <li>
                <a 
                  href={link.href}
                  class="text-warm-gray hover:text-soft-white transition-colors"
                >
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
        
        <!-- Legal Links -->
        <div>
          <h4 class="text-lg font-semibold text-soft-white mb-6">Legal</h4>
          <ul class="space-y-3">
            {footerLinks.legal.map((link) => (
              <li>
                <a 
                  href={link.href}
                  class="text-warm-gray hover:text-soft-white transition-colors"
                >
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
    
    <!-- Bottom Bar -->
    <div class="border-t border-soft-white/10 py-8">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <!-- Copyright -->
        <p class="text-warm-gray text-center md:text-left">
          © {currentYear} {companyName}. All rights reserved.
        </p>
        
        <!-- Additional Info -->
        <div class="flex flex-col md:flex-row items-center gap-4 text-sm text-warm-gray">
          <span>Built with Astro, React & Tailwind CSS</span>
          <span class="hidden md:inline">•</span>
          <a 
            href="mailto:hello@example.com"
            class="hover:text-soft-white transition-colors"
          >
            hello@example.com
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>
