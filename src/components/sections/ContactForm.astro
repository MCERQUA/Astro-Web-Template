---
// ContactForm.astro - Contact form section
import Card from '@components/ui/Card.astro';
import Button from '@components/ui/Button.astro';

export interface Props {
  title?: string;
  subtitle?: string;
  class?: string;
}

const { 
  title = 'Get In Touch',
  subtitle = 'We\'d love to hear from you. Send us a message and we\'ll respond as soon as possible.',
  class: className = ''
} = Astro.props;
---

<section class={`section-spacing bg-gradient-to-b from-sand/20 to-transparent ${className}`}>
  <div class="container-padding">
    <div class="max-w-4xl mx-auto">
      <!-- Section Header -->
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-espresso mb-6">
          {title}
        </h2>
        {subtitle && (
          <p class="text-xl text-taupe text-pretty max-w-2xl mx-auto">
            {subtitle}
          </p>
        )}
      </div>
      
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Contact Information -->
        <div class="space-y-8">
          <div>
            <h3 class="text-2xl font-bold text-espresso mb-6">Contact Information</h3>
            
            <div class="space-y-6">
              <!-- Phone -->
              <div class="flex items-start gap-4">
                <div class="w-12 h-12 bg-terra-cotta/10 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-terra-cotta" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-espresso mb-1">Phone</h4>
                  <p class="text-taupe">+1 (555) 123-4567</p>
                </div>
              </div>
              
              <!-- Email -->
              <div class="flex items-start gap-4">
                <div class="w-12 h-12 bg-terra-cotta/10 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-terra-cotta" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-espresso mb-1">Email</h4>
                  <p class="text-taupe">hello@example.com</p>
                </div>
              </div>
              
              <!-- Address -->
              <div class="flex items-start gap-4">
                <div class="w-12 h-12 bg-terra-cotta/10 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-terra-cotta" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-espresso mb-1">Address</h4>
                  <p class="text-taupe">123 Main Street<br>Suite 100<br>City, State 12345</p>
                </div>
              </div>
              
              <!-- Hours -->
              <div class="flex items-start gap-4">
                <div class="w-12 h-12 bg-terra-cotta/10 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-terra-cotta" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-espresso mb-1">Business Hours</h4>
                  <p class="text-taupe">
                    Monday - Friday: 9:00 AM - 6:00 PM<br>
                    Saturday: 10:00 AM - 4:00 PM<br>
                    Sunday: Closed
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Contact Form -->
        <Card variant="default" padding="lg">
          <form name="contact" method="POST" data-netlify="true" data-netlify-honeypot="bot-field" class="space-y-6">
            <!-- Netlify form detection -->
            <input type="hidden" name="form-name" value="contact" />
            
            <!-- Honeypot for spam protection -->
            <div class="hidden">
              <label>Don't fill this out if you're human: <input name="bot-field" /></label>
            </div>
            
            <!-- Name -->
            <div>
              <label for="name" class="block text-sm font-medium text-espresso mb-2">
                Full Name *
              </label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                required
                class="w-full px-4 py-3 border border-sand rounded-lg focus:ring-2 focus:ring-terra-cotta focus:border-transparent transition-colors bg-soft-white text-espresso"
                placeholder="Your full name"
              />
            </div>
            
            <!-- Email -->
            <div>
              <label for="email" class="block text-sm font-medium text-espresso mb-2">
                Email Address *
              </label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                required
                class="w-full px-4 py-3 border border-sand rounded-lg focus:ring-2 focus:ring-terra-cotta focus:border-transparent transition-colors bg-soft-white text-espresso"
                placeholder="your@email.com"
              />
            </div>
            
            <!-- Phone -->
            <div>
              <label for="phone" class="block text-sm font-medium text-espresso mb-2">
                Phone Number
              </label>
              <input 
                type="tel" 
                id="phone" 
                name="phone"
                class="w-full px-4 py-3 border border-sand rounded-lg focus:ring-2 focus:ring-terra-cotta focus:border-transparent transition-colors bg-soft-white text-espresso"
                placeholder="(555) 123-4567"
              />
            </div>
            
            <!-- Subject -->
            <div>
              <label for="subject" class="block text-sm font-medium text-espresso mb-2">
                Subject *
              </label>
              <input 
                type="text" 
                id="subject" 
                name="subject" 
                required
                class="w-full px-4 py-3 border border-sand rounded-lg focus:ring-2 focus:ring-terra-cotta focus:border-transparent transition-colors bg-soft-white text-espresso"
                placeholder="How can we help?"
              />
            </div>
            
            <!-- Message -->
            <div>
              <label for="message" class="block text-sm font-medium text-espresso mb-2">
                Message *
              </label>
              <textarea 
                id="message" 
                name="message" 
                rows="5"
                required
                class="w-full px-4 py-3 border border-sand rounded-lg focus:ring-2 focus:ring-terra-cotta focus:border-transparent transition-colors bg-soft-white text-espresso resize-vertical"
                placeholder="Tell us about your project or question..."
              ></textarea>
            </div>
            
            <!-- Submit Button -->
            <Button type="submit" variant="primary" size="lg" class="w-full">
              Send Message
            </Button>
            
            <!-- Privacy Notice -->
            <p class="text-sm text-warm-gray text-center">
              By submitting this form, you agree to our privacy policy and terms of service.
            </p>
          </form>
        </Card>
      </div>
    </div>
  </div>
</section>
