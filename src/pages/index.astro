---
// Homepage - Demonstrates modular component system
import BaseLayout from '@layouts/BaseLayout.astro';
import Navbar from '@components/ui/Navbar.astro';
import Hero from '@components/sections/Hero.astro';
import BlogPreview from '@components/sections/BlogPreview.astro';
import ContactForm from '@components/sections/ContactForm.astro';
import Footer from '@components/sections/Footer.astro';

// Check component registry before creating any new components
// See: src/components/componentRegistry.ts

const pageTitle = 'Welcome to Your Modular Website';
const pageDescription = 'A modern, modular website built with Astro, React, and Tailwind CSS. Components are organized and tracked for maximum reusability.';
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <!-- Navigation -->
  <Navbar logo="Modular Site" />
  
  <!-- Main Content -->
  <main class="flex-1">
    <!-- Hero Section -->
    <Hero 
      title="Build Amazing Websites with Modular Components"
      subtitle="This template provides a complete component registry system to help you build consistent, reusable websites faster than ever."
      ctaText="Get Started"
      ctaLink="#blog"
      secondaryCtaText="View Components"
      secondaryCtaLink="/components"
    />
    
    <!-- Blog Preview Section -->
    <BlogPreview 
      title="Latest Insights"
      subtitle="Discover tips, tutorials, and insights about modern web development"
      limit={3}
      showMore={true}
    />
    
    <!-- Contact Section -->
    <ContactForm 
      title="Ready to Get Started?"
      subtitle="Let's discuss your project and see how we can help bring your vision to life."
    />
  </main>
  
  <!-- Footer -->
  <Footer companyName="Modular Site" />
</BaseLayout>

<!-- SEO Schema Markup -->
<script type="application/ld+json" is:inline>
{
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "Modular Site",
  "description": "A modern, modular website template",
  "url": "https://your-domain.com",
  "sameAs": [
    "https://facebook.com/yourpage",
    "https://twitter.com/yourhandle",
    "https://linkedin.com/company/yourcompany"
  ]
}
</script>
